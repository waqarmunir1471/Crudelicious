<partial name="_nav"></partial>

@* @model CDelicious *@
<div class="container">
    <div class="col-lg-12">
        <h1 class="text-center" >@Model.Name</h1>
        <h3 class="text-center">@Model.ChefName</h3>
        <hr>
        <h4>Description</h4>
        <p>@Model.Description</p>
        <h4>Calories</h4> 
        <p>@Model.Calories</p>
        <h4>Tastiness</h4> 
        <p>@Model.Tastiness</p>

        <a asp-action="Delete" asp-route-DeleteId="@Model.DishId" class="btn btn-danger">Delete</a>
        <a href="Edit/@Model.DishId" class="btn btn-warning">Edit</a>
        <a href="/" class="btn btn-primary">Go Back</a>
    </div>
</div>