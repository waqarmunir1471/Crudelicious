                        <p><a asp-route-detailId="@dish.DishId" asp-action="Details" class="listOfDishes">@dish.Name</a> by @dish.ChefName</p>
                    }
            </div>
            <div class="col-lg-6">
                <a href="/new" role="button" class="btn btn-primary">Add a Dish </a>
