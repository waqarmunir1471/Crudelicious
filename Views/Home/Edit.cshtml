@* @using Crudelicious.Models *@
<partial name="_nav"></partial>
@model CDelicious
<div class="container">
    <div class="col-lg-12">
        <p>
        <div class="jumbotron">
            <h1>Edit Me @Model.Name</h1>
        </div>
        </p>
        <form asp-action="Update" asp-route-DishId="@Model.DishId" method="post" class="form-group">
        <div class="row">
            <div class="col-lg-4">
                <p>
                    <label asp-for="ChefName"></label>
                    <input asp-for="ChefName" class="form-control">
                </p>
                <p>
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control">
                </p>
                <p>
                    <label asp-for="Calories"></label>
                    <input asp-for="Calories" class="form-control">
                </p>
            </div>
            <div class="col-lg-4">
                <p>
                    <label asp-for="Tastiness"></label>
                    <select asp-for="Tastiness">
                        <option value="">--Select--</option>
                        @for(int i = 1; i<=10;i++){
                            <option value="@i">@i</option>
                        }
                    </select>
                </p>
            </div>
            <div class="col-lg-4">
                <p>
                <textarea asp-for="Description" id="" cols="30" rows="10" class="form-control"></textarea>
                </p>
                <p>
                    <input type="submit" class="btn btn-success" value="Update Dish">
                    <a href="/@Model.DishId" class="btn btn-primary"> Go Back</a>
                </p>
            </div>
        </form>
